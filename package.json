{
  "name": "stellar-p2p-file-transfer",
  "version": "0.1.0",
  "homepage": "https://github.com/Mantis322/Stellar-File-Transfer",
  "dependencies": {
    "@ant-design/icons": "^5.0.1",
    "@craco/craco": "^7.1.0",
    "@creit.tech/stellar-wallets-kit": "^1.7.3",
    "@reduxjs/toolkit": "^1.9.5",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/react-router-dom": "^5.3.3",
    "antd": "^5.4.2",
    "file-transfer": "file:./packages/file-transfer",
    "framer-motion": "^12.18.1",
    "js-file-download": "^0.4.12",
    "peerjs": "^1.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^7.6.2",
    "react-scripts": "5.0.1",
    "redux": "^4.2.1",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "predeploy": "yarn build",
    "deploy": "gh-pages -d build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "check-requirements": "chmod +x scripts/*.sh && ./scripts/check-requirements.sh",
    "setup": "npm run check-requirements && chmod +x scripts/*.sh && ./scripts/setup-testnet.sh",
    "build-contract": "chmod +x scripts/build-contract.sh && ./scripts/build-contract.sh",
    "deploy-contract": "chmod +x scripts/deploy-contract.sh && ./scripts/deploy-contract.sh",
    "start-server": "cd server && npm install && npm start",
    "dev": "concurrently \"npm run start-server\" \"npm start\"",
    "build-client": "cd packages/file-transfer && npm run build",
    "postinstall": "npm run build-client",
    "full-setup": "npm run setup && npm run build-contract && npm run deploy-contract",
    "clean": "rm -rf node_modules packages/*/node_modules server/node_modules && npm install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "babel-loader": "^10.0.0",
    "concurrently": "^8.2.2",
    "gh-pages": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
